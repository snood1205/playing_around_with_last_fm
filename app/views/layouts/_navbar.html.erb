<nav class="navbar navbar-light navbar-expand-sm bg-light">
  <%= navbar_anchor 'All Tracks', ?/, class: 'navbar-brand' %>
  <div class="dropdown-divider"></div>
  <%= navbar_text 'Tracks by:' %>
  <ul class="navbar-nav">
    <% unless username.nil? %>
      <% (1..track_by_actions.size).each do |size| %>
        <% track_by_actions.combination(size).each do |attrs| %>
          <%= navbar_link_item "#{attrs.join ', '}", "/tracks/#{username}/by_#{attrs.join '_and_'}" %>
        <% end %>
      <% end %>
    <% end %>
    <%= navbar_link_item ?|, ?# %>
    <%= navbar_link_item 'reports', track_report_url(track_username: username) unless username.nil? %>
    <%= navbar_link_item ?|, ?# %>
    <%= navbar_link_item 'jobs', jobs_path %>
  </ul>
</nav>