<h1>Jobs</h1>
<table class="table table-striped">
  <tr>
    <th scope="col">ID</th>
    <th scope="col">JID</th>
    <th scope="col">Name</th>
    <th scope="col">Started At</th>
    <th scope="col">Completed?</th>
  </tr>
  <% @jobs.each do |job| %>
    <tr>
      <th scope="row"><%= link_to job.id, job_path(job.id) %></th>
      <td><%= job.jid %></td>
      <td><%= job.name %></td>
      <td><%= job.started_at %></td>
      <td><%= job.completed? ? ?✅ : ?❌ %></td>
    </tr>
  <% end %>
</table>