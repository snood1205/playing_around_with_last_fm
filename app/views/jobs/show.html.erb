<meta http-equiv="Refresh" content="5">
<script>
    setTimeout(scrollToBottom, 1000);

    function scrollToBottom() {
        window.scrollTo(0, document.body.scrollHeight);
    }
</script>
<h3>Job <code><%= @job.jid %></code> Logs</h3>

<table>
  <tr>
    <th>Recorded At</th>
    <th>Severity</th>
    <th>Message</th>
  </tr>
  <% @logs.each do |log| %>
    <tr>
      <td><%= l log.created_at %></td>
      <td><%= log.severity.upcase %></td>
      <td><%= log.message %></td>
    </tr>
  <% end %>
</table>
