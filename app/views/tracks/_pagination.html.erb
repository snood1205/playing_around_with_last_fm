<nav aria-label="Page navigation">
  <ul class="pagination justify-content-center">
    <li class="page-item <%= @page_number == 1 && 'disabled' %>"><%= link_to 'Previous', "?page_number=#{@page_number.pred}", class: 'page-link' %></li>
    <% unless @page_number == 1 %>
      <li class="page-item"><%= link_to 1, '?page_number=1', class: 'btn btn-secondary', class: 'page-link' %></li>
      <% unless @page_number < 7 %>
        <li class="page-item"><a class="page-link">…</a></li>
      <% end %>
    <% end %>
    <% @prev_pages.each do |page| %>
      <li class="page-item"><%= link_to page, "?page_number=#{page}", class: 'page-link' %></li>
    <% end %>
    <li class="page-item disabled">
      <a class="page-link"><%= @page_number %></a>
    </li>
    <% @next_pages.each do |page| %>
      <li class="page-item"><%= link_to page, "?page_number=#{page}", class: 'page-link' %></li>
    <% end %>
    <% unless @page_number == @last_page %>
      <% unless @page_number > @last_page - 6 %>
        <li class="page-item"><a class="page-link">…</a></li>
      <% end %>
      <li class="page-item"><%= link_to @last_page, "?page_number=#{@last_page}", class: 'btn btn-secondary', class: 'page-link' %></li>
    <% end %>
    <li class="page-item <%= @page_number == @last_page && 'disabled' %>"><%= link_to 'Next', "?page_number=#{@page_number.succ}", class: 'page-link' %></li>
  </ul>
</nav>
<a href="/tracks/fetch_new_tracks" class="btn btn-primary">Fetch New Tracks</a>
